<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="/static/butik.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Butik</title>
</head>
<body>
    <section class="butikForm">
    <form enctype="multipart/form-data">
    <div class="uploadingSize">
        <label for="text">size</label>
        <input type="text" name="size" id="size" required>    
    </div>
    <div class="uploadingModel">
        <label for="model">Model</label>
        <input type="text" name="model" id="Model" required>
    </div>
    <div>
        <label for="price">Price</label>
        <input type="number" name="price" id="price" required>
    </div>
    <div class="uploadingFile">
        <label>Image</label>
        <input type="file" name="Image" id="File" required>
        <p id="progress"></p>
    </div>
    <div>
        <button type="submit" id="submit">Post on Butik</button>
    </div>
    <button id="SpecialBtn">spacial command</button>
</form> 
</section>
<secton class="reportCommand">
    <p class="commandNumber">
        <b>command until here : <%- number %> commands</b>
    </p>
    <% command.reverse().forEach(command => {%>
       <%- `<div class="userDetails"><div><p class="user">Name: ${command.Name}</p><p class="user">PostName: ${command.PostName} </p><p class="user">Phone: ${command.Phone}</p><p class="user">Email:${command.Email} </p><p class="user">Contry: ${command.Contry}</p><p>Date: ${command.Date}</p></div><div class="userShoes"><p class="user">Price: ${command.price} </p><p class="user">Size: ${command.size} </p><p class="user">model: ${command.model} </p><img src="${command.Command}" alt="image" class="user"></div></div><hr>` %>
        <% })%> 
</secton>
 <script src="https://www.gstatic.com/firebasejs/8.6.8/firebase-app.js"></script>
 <script src="https://www.gstatic.com/firebasejs/8.6.8/firebase-database.js"></script>
<script src="https://www.gstatic.com/firebasejs/8.6.8/firebase-storage.js"></script>
<script src="/statics/special.js" type="module"></script>
</body>
</html>